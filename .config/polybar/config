[module/workspaces]

	type            = internal/i3
	format          = <label-state> <label-mode>
	index-sort      = true
	wrapping-scroll = false

	; This will split the workspace name on ':'
	; Default: false
	strip-wsnumbers = true

	; Available tokens:
	;	%mode%
	; Default: %mode%
	label-mode-background = ${xrdb:color0}
	label-mode-foreground = ${xrdb:color7}
	label-mode-padding    = 3

	; focused = Active workspace on focused monitor
	; Available tokens:
	;	%name%
	;	%icon%
	;	%index%
	;	%output%
	; Default: %icon%  %name%
	label-focused            = %icon%
	label-focused-background = ${xrdb:color3}
	label-focused-foreground = ${xrdb:color0}
	label-focused-padding    = 4

	; unfocused = Inactive workspace on any monitor
	label-unfocused            = "%icon%"
	label-unfocused-background = ${colors.modules_bg}
	label-unfocused-foreground = ${xrdb:color15}
	label-unfocused-padding    = 3

	; visible = Active workspace on unfocused monitor
	label-visible            = %icon%
	label-visible-background = ${colors.modules_bg}
	label-visible-foreground = ${xrdb:color15}
	label-visible-padding    = 3

	; urgent = Workspace with urgency hint set
	label-urgent            = %icon%
	label-urgent-background = ${xrdb:color1}
	label-urgent-foreground = ${xrdb:color15}
	label-urgent-padding    = 3

	; workspace icons
	; ws-icon-[0-9]+ = label;icon
	; NOTE: The label needs to match the name of the i3 workspace
	; NOTE: You cannot skip icons, e.g. to get a ws-icon-6
	; you must also define a ws-icon-5.
	ws-icon-0 = "1;ÔÑ†"
	ws-icon-1 = "2;ÔÑ°"
	ws-icon-2 = "3;ÓÄá"
	ws-icon-3 = "4;ÔÅª"
	ws-icon-4 = "5;5"
	ws-icon-5 = "6;6"
	ws-icon-6 = "7;7"
	ws-icon-7 = "8;ÔÄΩ"
	ws-icon-8 = "9;ÔÜº"
	ws-icon-9 = "10;ÔãÜ"

	; Only show workspaces defined on the same output as the bar
	;
	; Useful if you want to show monitor specific workspaces
	; on different bars
	;
	; Default: false
	; pin-workspaces = true

	; Sort the workspaces by index instead of the default
	; sorting that groups the workspaces by output
	; Default: false
	;index-sort = true

	; Create click handler used to focus workspace
	; Default: true
	;enable-click = false

	; Create scroll handlers used to cycle workspaces
	; Default: true
	;enable-scroll = false

	; Wrap around when reaching the first/last workspace
	; Default: true
	;wrapping-scroll = false

	; Set the scroll cycle direction
	; Default: true
	;reverse-scroll = false

	; Use fuzzy (partial) matching on labels when assigning
	; icons to workspaces
	; Example: code;‚ôö will apply the icon to all workspaces
	; containing 'code' in the label
	; Default: false
	;fuzzy-match = true

